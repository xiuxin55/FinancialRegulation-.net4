            <!--所选项的样式-->
            <Trigger Property="IsSelected" Value="True">
                <Setter  Property="Background" Value="#4C9BCC" />
                <Setter Property="Focusable" Value="True"/>
            </Trigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>